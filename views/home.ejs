<%- include("partials/header"); -%>
<div class="main">

<h1>Home</h1>
<p>
  <%= homeContent %>
</p>

<% posts.forEach(function(post){ %>

<h1>
  <%= post.title %>
</h1>
<% if(post.content.length > 100) { %>
<% var truncatedPost = post.content.substring(0,100) + "..."; %>
<p>
  <%= truncatedPost %>
  <a href="/posts/<%= post._id %>">Read more</a>
</p>
<% } %>

<% }); %>


</div>



<%- include("partials/footer"); -%>
